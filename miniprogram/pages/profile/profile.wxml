<!--pages/profile/profile.wxml-->
<view class="banner">
  <image src="../../images/antu.jfif"></image>
</view>
<view class="profile-ban">
    <view class="row">
        <view class="text1">姓名：</view>
        <view class="text2">{{userInfo[0].username}}</view>
    </view>
    <view class="row">
        <view class="text1">电话：</view>
        <view class="text2">{{userInfo[0].phone}}</view>
    </view>
    <view class="row">
        <view class="text1">学院：</view>
        <view class="text2">{{userInfo[0].college}}</view>
    </view>
    <view class="row">
        <view class="text1">学号：</view>
        <view class="text2">{{userInfo[0].stuID}}</view>
    </view> 
    <view class="row">
        <view class="text1">年级：</view>
        <view class="text2">{{userInfo[0].grade}}</view>
    </view> 
    <button type="default" style="margin-top:20rpx;margin-bottom:60rpx" bindtap='alterprofile'>修改</button>
</view>